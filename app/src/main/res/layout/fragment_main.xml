<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1b2838"
    tools:context=".MainFragment">

    <!-- Header - Steam Logo, Arama ve Profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#171a21">



        <!-- Üst Satır: Arama çubuğu, 3 nokta, profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Arama Çubuğu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/search_background"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:baselineAligned="false">

                <!-- Steam Logo (gri ton) -->
                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="44dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/steamm"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    android:alpha="0.5"/> <!-- Gri görünmesi için saydamlık -->

                <!-- Boşluk bırakmak için ağırlıklı View -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Search (arama) ikonu sağda -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_search"
                    app:tint="#B8C1C6" />
            </LinearLayout>

            <!-- 3 Dots Menu -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dots_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <!-- Sonic Profil Fotoğrafı -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/sonic"
                android:contentDescription="@string/todo"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_circle_background"/>

        </LinearLayout>

        <!-- Alt Satır: Menü, İstek Listesi, Cüzdan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/men"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingEnd="4dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_arrow_down"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stek_l_stes"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c_zdan"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>



    <!-- İçerik Alanı - ScrollView ile -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- STEAM'E GÖZ ATIN Başlığı - Küçük ve yakın -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steam_e_g_z_atin"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <!-- Kategoriler - 2x2 Gradient Buton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <!-- İlk Satır -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/yen_ikanlar"
                        android:background="@drawable/button_gradient_1"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginEnd="4dp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/zel_firsatlar"
                        android:background="@drawable/button_gradient_1"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- İkinci Satır -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/crets_z_oyunlar"
                        android:background="@drawable/button_gradient_1"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginEnd="4dp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/kullanici_et_ketler"
                        android:background="@drawable/button_gradient_1"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>


            <!-- $10 USD ALTI Başlığı -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_usd_alti"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <!-- Oyunlar - Yatay RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Butonlar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_usd_alti"
                    android:background="@drawable/rectangle_button_background"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_5_usd_alti"
                    android:background="@drawable/rectangle_button_background"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Scrollable TabLayout Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1b2838"
                android:gravity="center_vertical">

                <!-- Sol Ok -->
                <ImageView
                    android:id="@+id/ivLeftArrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:contentDescription="@string/todo"/>

                <!-- TabLayout -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:tabTextColor="#B8C1C6"
                    app:tabSelectedTextColor="#007ACC"
                    app:tabIndicatorColor="#007ACC"
                    app:tabMode="scrollable"
                    android:background="#1b2838"/>

                <!-- Sağ Ok -->
                <ImageView
                    android:id="@+id/ivRightArrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:visibility="visible"
                    android:contentDescription="@string/todo"/>

            </LinearLayout>

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>



        </LinearLayout>

    </ScrollView>

    <!-- Alt Navigasyon Çubuğu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#171a21"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:contentDescription="@string/todo"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_library"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_shield"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_notification"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/todo"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>